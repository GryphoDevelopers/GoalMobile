<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Icone - Fundo do lado Esquerdo -->
    <item>
        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="@color/mediun_lightGrey"/>
        </shape>
    </item>

    <!-- Fundo do Input - Fundo em cima do Fundo Preto, com espaçamento na Lateral Esquerda -->
    <item android:left="40dp">
        <shape>
            <solid android:color="?attr/colorOnPrimary" />
            <corners
                android:topRightRadius="8dp"
                android:bottomRightRadius="8dp"/>
        </shape>
    </item>

    <!-- Borda - Fundo Transparente que está em cima dos Anteriores -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="4dp"/>
            <stroke android:color="@color/light_grey" android:width="2dp"/>
        </shape>
    </item>
</layer-list>
