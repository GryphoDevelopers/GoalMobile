<?xml version="1.0" encoding="utf-8"?>

<!-- Uso do ScrollView para que seja possivel subir e abaixar a naveganção na Tela -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".views.activities.SingUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar_singIn"
            layout="@layout/tool_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_titleSingUp"
            style="@style/title_activities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_singUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_singIn" />

        <include
            android:id="@+id/line_goal2"
            layout="@layout/line_gol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_titleSingUp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layouts_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_goal2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_dataPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/button_nextSingUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_dataSingIn"
                    style="@style/title_fields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_personal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/line_grey2"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/mediun_lightGrey"
                    app:layout_constraintEnd_toEndOf="@+id/txt_dataSingIn"
                    app:layout_constraintStart_toStartOf="@+id/txt_dataSingIn"
                    app:layout_constraintTop_toBottomOf="@+id/txt_dataSingIn" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutedit_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/label_name"
                    app:counterEnabled="true"
                    app:counterMaxLength="60"
                    app:endIconMode="clear_text"
                    app:helperText="@string/hint_name"
                    app:helperTextEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/txt_dataSingIn"
                    app:layout_constraintTop_toBottomOf="@+id/line_grey2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutedit_nickname"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/label_nickname"
                    app:counterEnabled="true"
                    app:counterMaxLength="60"
                    app:endIconMode="clear_text"
                    app:helperText="@string/hint_nickname"
                    app:helperTextEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/layoutedit_name"
                    app:layout_constraintTop_toBottomOf="@+id/layoutedit_name"
                    app:startIconDrawable="@drawable/ic_group">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txt_typeUser"
                    style="@style/label_fields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_peopleType"
                    app:layout_constraintStart_toStartOf="@+id/layoutedit_nickname"
                    app:layout_constraintTop_toBottomOf="@id/layoutedit_nickname" />

                <TextView
                    android:id="@+id/error_optionUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/errorInputs"
                    android:textColor="@color/ruby_red"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/txt_typeUser"
                    app:layout_constraintTop_toBottomOf="@+id/txt_typeUser" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/error_optionUser">

                    <RadioButton
                        android:id="@+id/rbtn_client"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp" />

                    <RadioButton
                        android:id="@+id/rbtn_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_dataLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/button_nextSingUp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_dataforLogin"
                    style="@style/title_fields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_login"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/line_grey31"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/mediun_lightGrey"
                    app:layout_constraintEnd_toEndOf="@+id/txt_dataforLogin"
                    app:layout_constraintStart_toStartOf="@+id/txt_dataforLogin"
                    app:layout_constraintTop_toBottomOf="@+id/txt_dataforLogin" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutedit_email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/label_email"
                    app:counterEnabled="true"
                    app:counterMaxLength="60"
                    app:endIconMode="clear_text"
                    app:helperText="@string/hint_email"
                    app:helperTextEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/line_grey31"
                    app:layout_constraintTop_toBottomOf="@+id/line_grey31"
                    app:startIconDrawable="@drawable/ic_email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutedit_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/label_password"
                    app:counterEnabled="true"
                    app:counterMaxLength="60"
                    app:endIconMode="password_toggle"
                    app:helperText="@string/hint_password"
                    app:helperTextEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/layoutedit_email"
                    app:layout_constraintTop_toBottomOf="@+id/layoutedit_email"
                    app:startIconDrawable="@drawable/ic_https">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutedit_confirmPassword"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/label_confirmPassword"
                    app:counterEnabled="true"
                    app:counterMaxLength="60"
                    app:endIconMode="password_toggle"
                    app:helperText="@string/hint_confirmPassword"
                    app:helperTextEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/layoutedit_password"
                    app:layout_constraintTop_toBottomOf="@+id/layoutedit_password"
                    app:startIconDrawable="@drawable/ic_https">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittext_confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/error_termsUse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-90dp"
                    android:layout_marginLeft="-90dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/errorInputs"
                    android:textColor="@color/ruby_red"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/layoutedit_confirmPassword"
                    app:layout_constraintTop_toBottomOf="@+id/layoutedit_confirmPassword" />

                <CheckBox
                    android:id="@+id/cbx_termsUse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="@string/txt_confirmTermsUse"
                    app:layout_constraintStart_toStartOf="@+id/layoutedit_confirmPassword"
                    app:layout_constraintTop_toBottomOf="@+id/layoutedit_confirmPassword"
                    app:useMaterialThemeColors="false" />

                <Button
                    android:id="@+id/see_termsUse"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/btn_seeTermsUse"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/cbx_termsUse"
                    app:layout_constraintTop_toBottomOf="@+id/cbx_termsUse" />

                <Button
                    android:id="@+id/button_createAcount"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:clickable="false"
                    android:focusable="auto"
                    android:text="@string/btn_createAcount"
                    android:textColor="@color/white_light"
                    android:textSize="18sp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/see_termsUse" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/button_backStage"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/btn_backStage"
                android:visibility="invisible"
                app:icon="@drawable/ic_keyboard_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_nextSingUp" />

            <Button
                android:id="@+id/button_nextSingUp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/btn_nextStage"
                app:icon="@drawable/ic_next"
                app:iconGravity="end"
                app:layout_constraintBottom_toTopOf="@+id/txt_statusProgress"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txt_statusProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/status_page"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_nextSingUp"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>