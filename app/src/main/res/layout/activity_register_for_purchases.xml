<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.RegisterForPurchases">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".views.activities.RegisterForPurchases">

        <!-- Adicionar Icone apos o texto "Pular essa Etapa" -->
        <!-- Pular a etapa do Cadastro Completo (Opcional, mas Obrigatorio para Compras) -->

        <include
            android:id="@+id/include2"
            layout="@layout/tool_bar" />

        <TextView
            android:id="@+id/txt_secondStage"
            style="@style/title_activities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_registerOptional"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include2" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="@string/description_registerOptional"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_secondStage" />

        <include
            android:id="@+id/line_goal4"
            layout="@layout/line_gol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_description" />

        <Button
            android:id="@+id/btn_nextStage"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/next_stage"
            android:textColor="@color/light_grey"
            android:textSize="12sp"
            app:icon="@drawable/ic_next"
            app:iconGravity="end"
            app:iconTint="@color/light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_goal4" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_dataPersonal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/btn_nextStage"
            tools:layout_editor_absoluteX="56dp">

            <TextView
                android:id="@+id/txt_dataSingIn"
                style="@style/title_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_personal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line_grey2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/mediun_lightGrey"
                app:layout_constraintEnd_toEndOf="@+id/txt_dataSingIn"
                app:layout_constraintStart_toStartOf="@+id/txt_dataSingIn"
                app:layout_constraintTop_toBottomOf="@+id/txt_dataSingIn" />

            <!--TODO Implementar AutoFillHint-->

            <TextView
                android:id="@+id/txt_typeData"
                style="@style/label_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_typeDocument"
                app:layout_constraintStart_toStartOf="@+id/line_grey2"
                app:layout_constraintTop_toBottomOf="@+id/line_grey2" />

            <TextView
                android:id="@+id/error_optionUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/errorInputs"
                android:textColor="@color/ruby_red"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/txt_typeData"
                app:layout_constraintTop_toBottomOf="@+id/txt_typeData" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/error_optionUser">

                <RadioButton
                    android:id="@+id/rbtn_cpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp" />

                <RadioButton
                    android:id="@+id/rbtn_cnpj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:id="@+id/txt_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/label_cpf"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/txt_typeData"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

            <EditText
                android:id="@+id/edit_cpf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:autofillHints="Nome"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="@string/hint_cpf"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_cpf"
                app:layout_constraintTop_toBottomOf="@+id/txt_cpf" />

            <TextView
                android:id="@+id/txt_cnpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/label_cnpj"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/txt_typeData"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

            <EditText
                android:id="@+id/edit_cnpj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:autofillHints="Nome"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="@string/hint_cnpj"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_cnpj"
                app:layout_constraintTop_toBottomOf="@+id/txt_cnpj" />

            <TextView
                android:id="@+id/txt_phone"
                style="@style/label_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_telephone"
                app:layout_constraintStart_toStartOf="@+id/txt_typeData"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

            <EditText
                android:id="@+id/edit_phone"
                style="@style/editText_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="Nome"
                android:background="@drawable/edit_text_with_icon"
                android:drawableStart="@drawable/ic_smartphone"
                android:drawableLeft="@drawable/ic_smartphone"
                android:ems="10"
                android:hint="@string/hint_telephone"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_phone"
                app:layout_constraintTop_toBottomOf="@+id/txt_phone" />

            <TextView
                android:id="@+id/textView"
                style="@style/label_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_country"
                app:layout_constraintStart_toStartOf="@+id/txt_phone"
                app:layout_constraintTop_toBottomOf="@+id/edit_phone" />

            <Spinner
                android:id="@+id/spinner_countries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_dataPersonal"
            tools:layout_editor_absoluteX="-16dp">

            <TextView
                android:id="@+id/txt_dataSingIn2"
                style="@style/title_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line_grey4"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/mediun_lightGrey"
                app:layout_constraintEnd_toEndOf="@+id/txt_dataSingIn2"
                app:layout_constraintStart_toStartOf="@+id/txt_dataSingIn2"
                app:layout_constraintTop_toBottomOf="@+id/txt_dataSingIn2" />

            <TextView
                android:id="@+id/textView2"
                style="@style/label_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_state"
                app:layout_constraintStart_toStartOf="@+id/txt_dataSingIn2"
                app:layout_constraintTop_toBottomOf="@+id/line_grey4" />

            <Spinner
                android:id="@+id/spinner_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/txt_cep"
                style="@style/label_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_cep"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/spinner_state" />

            <EditText
                android:id="@+id/edit_cep"
                style="@style/editText_personalized"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:autofillHints="Nome"
                android:hint="@string/hint_cep"
                android:inputType="textPostalAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_cep"
                app:layout_constraintTop_toBottomOf="@+id/txt_cep" />

            <TextView
                android:id="@+id/txt_address"
                style="@style/label_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_address"
                app:layout_constraintStart_toStartOf="@+id/txt_cep"
                app:layout_constraintTop_toBottomOf="@+id/edit_cep" />

            <EditText
                android:id="@+id/edit_address"
                style="@style/editText_personalized"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="Nome"
                android:ems="10"
                android:hint="@string/hint_address"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.066"
                app:layout_constraintStart_toStartOf="@+id/txt_cep"
                app:layout_constraintTop_toBottomOf="@+id/txt_address" />

            <TextView
                android:id="@+id/txt_district"
                style="@style/label_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_district"
                app:layout_constraintStart_toStartOf="@+id/txt_address"
                app:layout_constraintTop_toBottomOf="@+id/edit_address" />

            <EditText
                android:id="@+id/edit_district"
                style="@style/editText_personalized"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="Nome"
                android:ems="10"
                android:hint="@string/hint_district"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.066"
                app:layout_constraintStart_toStartOf="@+id/txt_cep"
                app:layout_constraintTop_toBottomOf="@+id/txt_district" />

            <TextView
                android:id="@+id/txt_number"
                style="@style/label_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_number"
                app:layout_constraintStart_toStartOf="@+id/txt_district"
                app:layout_constraintTop_toBottomOf="@+id/edit_district" />

            <EditText
                android:id="@+id/editTextNumber"
                style="@style/editText_personalized"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="Nome"
                android:ems="10"
                android:hint="@string/hint_number"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_number"
                app:layout_constraintTop_toBottomOf="@+id/txt_number" />

            <TextView
                android:id="@+id/txt_number2"
                style="@style/label_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_complement"
                app:layout_constraintStart_toStartOf="@+id/txt_number"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                style="@style/editText_personalized"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="Nome"
                android:ems="10"
                android:hint="@string/hint_complement"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_number2"
                app:layout_constraintTop_toBottomOf="@+id/txt_number2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
