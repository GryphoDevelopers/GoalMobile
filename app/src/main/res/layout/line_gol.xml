<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewRed2"
        android:layout_width="60dp"
        android:layout_height="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@color/ruby_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_index" />

    <View
        android:id="@+id/viewBlue2"
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@color/blue_jeans"
        app:layout_constraintStart_toEndOf="@+id/viewRed"
        app:layout_constraintTop_toBottomOf="@+id/txt_index" />

    <View
        android:id="@+id/viewGreen2"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1"
        android:background="@color/lime_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewBlue"
        app:layout_constraintTop_toBottomOf="@+id/txt_index" />
</LinearLayout>