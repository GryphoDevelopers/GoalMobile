<?xml version="1.0" encoding="utf-8"?>
<!-- Layout que serÃ¡ importado em outras partes do APP -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_lineGoal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewRed3"
        android:layout_width="60dp"
        android:layout_height="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_weight="1"
        android:background="@color/ruby_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_index" />

    <View
        android:id="@+id/viewBlue3"
        android:layout_width="225dp"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:background="@color/blue_jeans"
        app:layout_constraintEnd_toStartOf="@+id/viewGreen"
        app:layout_constraintStart_toEndOf="@+id/viewRed"
        app:layout_constraintTop_toBottomOf="@+id/txt_index" />

    <View
        android:id="@+id/viewGreen3"
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1"
        android:background="@color/lime_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_index" />
</LinearLayout>