<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Goal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- AppBar e Elementos Primarios da UI -->
        <item name="colorPrimary">@color/ruby_red</item>
        <!-- Status bar (Android 5.0+) e Apps Bars -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white_light</item>

        <!-- Checkboxes e Text Fields -->
        <item name="colorSecondary">@color/blue_jeans</item>
        <item name="colorSecondaryVariant">@color/blue_jeans</item>
        <item name="colorOnSecondary">@color/dark_grey</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Implementação do Light Theme. Definição do Background e Texto -->
        <item name="android:windowBackground">@color/white_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:textColorSecondary">@color/mediun_grey</item>


        <!-- Desativa a ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
</resources>