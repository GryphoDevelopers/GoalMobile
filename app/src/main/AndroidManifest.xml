        <activity android:name=".views.activities.WishesActivity" />
        <activity android:name=".views.activities.ChangesActivity" />
        <activity android:name=".views.activities.DetailsActivity" />
        <activity android:name=".views.activities.ProfileActivity" />
        <activity android:name=".views.activities.LoginActivity" />
        <activity android:name=".views.activities.AddressActivity" />
        <activity android:name=".views.activities.IndexActivity" />
        <activity android:name=".views.activities.SingUpActivity" />
        <activity
            android:name=".views.activities.OpenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>